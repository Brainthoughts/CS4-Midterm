<%- include("../partials/header") %>

<br>
<h1 class="text-center">Welcome to Treasure Hunt Leader Board!</h1>
<br>
<div class="row justify-content-center">
    <div class="w-50">
        <table class="table table-responsive">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Time</th>
            </tr>
            </thead>
            <tbody>
            <% for (let time of times) {
                let date = new Date(time.time)
            %>
            <tr>
                <th scope="row"><%- times.indexOf(time) + 1 %></th>
                <td><%- time.username %></td>
                <td><%- date.getHours() - 16 > 9 ? date.getHours() - 16 : `0${date.getHours() - 16}` %>:<%- date.getMinutes() > 9 ? date.getMinutes() : `0${date.getMinutes()}` %>:<%- date.getSeconds() > 9 ? date.getSeconds() : `0${date.getSeconds()}` %></td>
            </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
<%- include("../partials/footer") %>